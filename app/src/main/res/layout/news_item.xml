<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hacker_background"
    android:orientation="vertical"
    android:padding="@dimen/base_padding">

    <TextView
        android:id="@+id/story_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@string/roboto_regular"
        android:textColor="@android:color/black"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hello This is sample news" />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@string/roboto_light"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/story_title"
        app:layout_constraintStart_toStartOf="@+id/story_title"
        app:layout_constraintTop_toBottomOf="@+id/story_title"
        tools:text="This is sample" />

</androidx.constraintlayout.widget.ConstraintLayout>